{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "moduleResolution": "node",
    "target": "ES6",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist"
  },
  "include": [
    ".eslintrc.js",
    "src/**/*",
    "index.d.ts",
    "webpack.config.js",
    "__tests__/**/*",
    "__mocks__/**/*",
  ],
  "exclude": [
    "node_modules",
  ]
}