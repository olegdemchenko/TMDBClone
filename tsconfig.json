{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "moduleResolution": "node",
    "target": "ES6",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist"
  },
  "include": [
    ".eslintrc.js",
    "src/**/*",
    "global.d.ts",
    "webpack.config.js",
    "testsSetup/**/*",
    "__mocks__/**/*",
    "setup"
  ],
  "exclude": ["node_modules"]
}
